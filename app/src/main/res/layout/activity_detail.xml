<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:background="@color/fondo_app">

    <LinearLayout
        android:id="@+id/llBtn"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        app:layout_constraintTop_toBottomOf="@id/tvTituloApp"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/ivAtras"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/angulo_izquierdo"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ivBasura"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"

            android:src="@drawable/basura"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvTituloApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="MI BIBLIOTECA"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/app_ui"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvIvImagen"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/llBtn"
        app:layout_constraintStart_toStartOf="parent">

    <ImageView
        android:id="@+id/ivImagen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/readlog_big" />

</androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"

        android:text="Titulo: "
        android:textStyle="bold"
        android:textColor="@color/marron_letra_rv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cvIvImagen"
        app:layout_constraintTop_toBottomOf="@id/llBtn" />

    <TextView
        android:id="@+id/tvAutor"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"
        android:textStyle="bold"
        android:text="Autor: "
        android:textColor="@color/marron_letra_rv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cvIvImagen"
        app:layout_constraintTop_toTopOf="@+id/tvTitulo" />

    <TextView
        android:id="@+id/tvCategoria"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"
        android:textStyle="bold"
        android:text="Categoria: "
        android:textColor="@color/marron_letra_rv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cvIvImagen"
        app:layout_constraintTop_toTopOf="@+id/tvAutor" />

    <TextView
        android:id="@+id/tvEditorial"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"
        android:textStyle="bold"
        android:text="Editorial: "
        android:textColor="@color/marron_letra_rv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cvIvImagen"
        app:layout_constraintTop_toTopOf="@+id/tvCategoria" />

    <TextView
        android:id="@+id/tvPaginas"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"
        android:textStyle="bold"
        android:text="Paginas: "
        android:textColor="@color/marron_letra_rv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cvIvImagen"
        app:layout_constraintTop_toTopOf="@+id/tvEditorial" />

    <TextView
        android:id="@+id/tvResena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:text="ReseÃ±a: "
        android:textStyle="bold"
        android:textColor="@color/marron_letra_rv"
        app:layout_constraintTop_toBottomOf="@+id/cvIvImagen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/tvCampoResena"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/style_borde_textview"
        app:layout_constraintTop_toBottomOf="@+id/tvResena"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <RatingBar
        android:id="@+id/rbEstrellas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:progressTint="@color/estrellas"
        android:rating="3"
        android:stepSize="1"
        app:layout_constraintTop_toBottomOf="@id/tvCampoResena"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvMensajeEstrellas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="            "

        app:layout_constraintTop_toBottomOf="@+id/rbEstrellas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnPuntuar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/app_ui"
        android:text="Puntuar"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tvMensajeEstrellas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>